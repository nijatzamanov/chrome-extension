{
    "name": "My First Extension",
    "description": "Shows a menu item",
    "version": "0.3",
    "permissions": ["contextMenus", "activeTab"],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://www.google/*", "*://www.youtube.com/"],
            "js": ["index.js"]
        }
    ],
    "manifest_version": 2
}